<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Black">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- customized styles-->
    <style name="innerText1">
        <item name="android:textColor">@color/lightred</item>
    </style>
    <style name="innerText2">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="mainTextBox">
        <item name="android:textColor">@color/lightblu</item>
    </style>

    <style name="List">
        <item name="android:background">@color/darkbg</item>
        <item name="android:textColor">@color/lightwhite</item>
    </style>

    <style name="mf">
        <item name="android:background">@color/mainframe</item>
    </style>
    <style name="gl">
        <item name="android:background">@color/grouplist</item>
    </style>
    <style name="gc">
        <item name="android:background">@color/groupchild</item>
    </style>

</resources>
